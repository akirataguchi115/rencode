{
  "manifest_version": 2,
  "name": "rencode",
  "version": "1.0",
  "description": "Re-encodes videos from right-click menu",
  "background": {
    "scripts": [
      "background-script.js"
    ],
    "persistent": false
  },
  "scripts": {
    "start:firefox": "web-ext run"
  },
  "permissions": [
    "contextMenus",
    "downloads",
    "activeTab"
  ]
}